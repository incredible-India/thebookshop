extends ./componants/base.pug


block title 
    title Registration

block link
    style
        include ./../assets/css/otpPmobile.css
block nav 
    include ./componants/navbar.pug
    include ./componants/secondaryNavBar.pug
block content
    -var noError = errorCode
    -var numVarified = varified
    .container.topELE 
        .row 
            .col-md-6 
                img.img-fluid(src="./../../../public/src/svg/Ebook.svg", alt="new man")

            .col-md-6
                if (numVarified) 
                    .container-justify-content-center.formdta 
                        form.validatemob(action="/newregistration/verifyphone", method="post")
                            label(for="mobile") Mobile Number
                            input.form-control.mobn(type="number" placeholder="Mobile Number" id='mobile' name="mobile")
                            .buttons 
                                button.btn.btn-outline-danger.sub(type="submit") Verify Number
                                button.btn.btn-outline-info.google(type="submit") Sign In With Google
                            if (noError)

                                p.errMsg #{errMSG}
                        
                        a.log(href="/") Log In
                else
                    .container-justify-content-center.formdta 
                        form(action="/newregistration/verificationSuccess", method="post" )
                            label(for="mobile") An OTP send to your mobile number
                            input.form-control.mobn(type="number" placeholder="OTP" id='mobile' name="otp")
                            .buttons 
                                button.btn.btn-outline-danger.sub(type="submit") Enter
                               
                            if (noError)

                                p.errMsg Invalid OTP
                        
                        a.log(href="/") Log In 


block script 
    script 
        include ./../assets/js/otpPmobile.js


